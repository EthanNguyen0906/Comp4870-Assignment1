@page
@model UsersModel
@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

<!-- Filtering form -->
<form method="get" class="mb-3">
    <input type="text" name="Filter" class="form-control" style="max-width:300px;" 
           placeholder="Filter by email, name or role" value="@Model.Filter" />
    <button type="submit" class="btn btn-primary mt-2">Filter</button>
</form>

@if (Model.PagedUsers == null || !Model.PagedUsers.Any())
{
    <p><em>No users found.</em></p>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Email</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var user in Model.PagedUsers)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Role</td>
                <td>
                    <a class="btn btn-success btn-sm" href="/users/@user.Email/edit">Edit</a>
                    <a class="btn btn-danger btn-sm ms-1" href="/users/@user.Email/delete">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <!-- Pagination controls -->
    <div class="mt-3">
        <a class="btn btn-secondary @(Model.CurrentPage == 1 ? "disabled" : "")" 
           asp-page="/Users" 
           asp-route-PageNumber="@(Model.CurrentPage - 1)">Previous</a>
        <span class="mx-2">Page @Model.CurrentPage of @Model.TotalPages</span>
        <a class="btn btn-secondary @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")" 
           asp-page="/Users" 
           asp-route-PageNumber="@(Model.CurrentPage + 1)">Next</a>
    </div>
}
